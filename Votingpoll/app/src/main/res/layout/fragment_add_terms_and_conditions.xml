<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.votingadmin.AddTermsAndConditionsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/add_terms_and_conditions"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edittextmultilineTerms"
        android:layout_width="302dp"
        android:layout_height="109dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/square"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Add Terms and Conditions Here"
        android:inputType="textMultiLine" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="150dp"
        android:text="click"
        android:id="@+id/termsandconditionsbutton"/>

</FrameLayout>